{# templates/reservation/form.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Réserver une chambre{% endblock %}

{% block body %}
    <h1>Réservation pour le foyer {{ foyer.nom }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.niveauUniversitaire) }}
        {{ form_row(form.typeChambre) }}
        {{ form_row(form.chambre) }}
        {{ form_row(form.submit) }}
    {{ form_end(form) }}
{% endblock %}
