<!-- Modal d'authentification sans cadre blanc -->
<div id="authModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="authModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content no-background">
            <div class="modal-body">
                <div class="container1" id="container1">
                    <!-- Formulaire d'inscription -->
                    <div class="form-container1 sign-up-container1">
                        <form action="" method="POST">
                            <h1>Créer un Compte</h1>
                            <input type="text" name="first_name" placeholder="Prénom" required />
                            <input type="text" name="last_name" placeholder="Nom de famille" required />
                            <input type="text" name="phone" placeholder="Numéro de téléphone" required />
                            <input type="date" name="dob" placeholder="Date de naissance" required />
                            <input type="email" name="email" placeholder="Email" required />
                            <input type="password" name="password" placeholder="Mot de passe" required />
                            <button type="submit">S'inscrire</button>
                        </form>
                    </div>

                    <!-- Formulaire de connexion -->
                    <div class="form-container1 sign-in-container1">
                        <form action="" method="POST">
                            <h1>Se Connecter</h1>
                            <input type="email" name="email" placeholder="Email" required />
                            <input type="password" name="password" placeholder="Mot de passe" required />
                            <a href="" class="forgot">Mot de passe oublié ?</a>
                            <button type="submit">Se Connecter</button>
                        </form>
                    </div>

                    <!-- Panneaux d'Overlay -->
                    <div class="overlay-container1">
                        <div class="overlay">
                            <!-- Overlay pour Sign In -->
                            <div class="overlay-panel overlay-left">
                                <img src="{{ asset('images/logo-esprit.png') }}">
                                <h3 style="color: #737778"><strong>ESPRIT</strong> ... Se Former autrement pour une nouvelle génération d'ingénieurs.</h3>
                                <br><br>
                                <button class="ghost" id="signIn">Se Connecter</button>
                            </div>
                            <!-- Overlay pour Sign Up -->
                            <div class="overlay-panel overlay-right">
                                <img src="{{ asset('images/logo-esprit.png') }}">
                                <h3 style="color: #737778"><strong>ESPRIT</strong> ... Se Former autrement pour une nouvelle génération d'ingénieurs.</h3>
                                <br><br>
                                <button class="ghost" id="signUp">S'inscrire</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{# Custom JavaScript for the modal functionality #}
<script>
    // JavaScript pour basculer entre les panneaux de connexion et d'inscription
    document.addEventListener("DOMContentLoaded", function () {
        const container1 = document.getElementById('container1');
        const signUpButton = document.getElementById('signUp');
        const signInButton = document.getElementById('signIn');

        if (signUpButton && signInButton && container1) {
            signUpButton.addEventListener('click', () => {
                container1.classList.add('right-panel-active');
            });

            signInButton.addEventListener('click', () => {
                container1.classList.remove('right-panel-active');
            });
        }
    });
</script>

{# Custom Styles for removing the white frame of the modal #}
<style>
