
{% block body %}
    <header>
        {% include '/components/navbar.html.twig' %}
    </header>

    <div class="container1" id="container1">
        <div class="form-container1 sign-up-container1">
            <form action="" method="POST">
                <h1>Create Account</h1>
                <input type="text" name="first_name" placeholder="First Name" required />
                <input type="text" name="last_name" placeholder="Last Name" required />
                <input type="text" name="phone" placeholder="Phone Number" required />
                <input type="date" name="dob" placeholder="Date of Birth" required />
                <input type="email" name="email" placeholder="Email" required />
                <input type="password" name="password" placeholder="Password" required />
                <button type="submit">Sign Up</button>
            </form>
        </div>

        <!-- Sign In Form -->
        <div class="form-container1 sign-in-container1">
            <form action="" method="POST">
                <h1>Sign In</h1>
                <input type="email" name="email" placeholder="Email" required />
                <input type="password" name="password" placeholder="Password" required />
                <a href="" class="forgot">Forgot your password?</a>
                <button type="submit">Sign In</button>
            </form>
        </div>

        <!-- Overlay Panels -->
        <div class="overlay-container1">
            <div class="overlay">
                <!-- Overlay for Sign In -->
                <div class="overlay-panel overlay-left">
                    <img src="{{ asset('images/logo-esprit.png') }}">
                    <h3 style="color: #737778"><strong>ESPRIT</strong> ... Se Former autrement pour une nouvelle génération d'ingénieurs.</h3>
                    <br>
                    <br>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <!-- Overlay for Sign Up -->
                <div class="overlay-panel overlay-right">
                   <img src="{{ asset('images/logo-esprit.png') }}">
                    <h3 style="color: #737778"><strong>ESPRIT</strong> ... Se Former autrement pour une nouvelle génération d'ingénieurs.</h3>
                    <br>
                    <br>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
    <style>
                :root {
            --primary-color: #a11515;
            --secondary-color: #373636;
            --overlay-color: rgb(67, 66, 66);
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: #434242;
            margin: 0;
            padding-top: 120px;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        header {
            width: 100%;
            position: fixed;
            top: 0;
            z-index: 1000;
        }

        .container1 {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 14px 28px var(--overlay-color), 0 10px 10px var(--overlay-color);
            position: relative;
            overflow: hidden;
            width: 800px;
            max-width: 100%;
            min-height: 500px;
        }

        .container1 h1 {
            font-weight: bold;
            margin: 0;
        }

        .container1 p {
            font-size: 14px;
            font-weight: 300;
            line-height: 20px;
            letter-spacing: 0.5px;
            margin: 20px 0 30px;
        }

        .container1 .form-container1 {
            position: absolute;
            top: 0;
            height: 100%;
            transition: all 0.6s ease-in-out;
        }

        .container1 .sign-in-container1 {
            left: 0;
            width: 50%;
            z-index: 2;
        }

        .container1.right-panel-active .sign-in-container1 {
            transform: translateX(100%);
        }

        .container1 .sign-up-container1 {
            left: 0;
            width: 50%;
            opacity: 0;
            z-index: 1;
        }

        .container1.right-panel-active .sign-up-container1 {
            transform: translateX(100%);
            opacity: 1;
            z-index: 5;
            animation: show 0.6s;
        }

        @keyframes show {
            0% {
                opacity: 0;
            }
            100% {
                opacity: 1;
            }
        }

        .container1 form {
            background: #fff;
            display: flex;
            flex-direction: column;
            padding: 0 50px;
            height: 100%;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .container1 .form-container1 input {
            background: #eee;
            border: none;
            padding: 12px 15px;
            margin: 8px 0;
            width: 100%;
        }

        .container1 button {
            border-radius: 20px;
            border: 1px solid var(--primary-color);
            background: var(--primary-color);
            color: #fff;
            font-size: 12px;
            font-weight: bold;
            padding: 12px 45px;
            letter-spacing: 1px;
            text-transform: uppercase;
            transition: transform 80ms ease-in;
            cursor: pointer;
        }

        .container1 button:active {
            transform: scale(0.95);
        }

        .container1 button:focus {
            outline: none;
        }

        .container1 .overlay-container1 {
            position: absolute;
            top: 0;
            left: 50%;
            width: 50%;
            height: 100%;
            overflow: hidden;
            transition: transform 0.6s ease-in-out;
            z-index: 100;
        }

        .container1.right-panel-active .overlay-container1 {
            transform: translateX(-100%);
        }

        .container1 .overlay {
            background: var(--secondary-color);
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            color: #fff;
            position: relative;
            left: -100%;
            height: 100%;
            width: 200%;
            transform: translateX(0);
            transition: transform 0.6s ease-in-out;
        }

        .container1.right-panel-active .overlay {
            transform: translateX(50%);
        }

        .container1 .overlay-panel {
            position: absolute;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 0 40px;
            text-align: center;
            top: 0;
            height: 100%;
            width: 50%;
            transform: translateX(0);
            transition: transform 0.6s ease-in-out;
        }

        .container1 .overlay-left {
            transform: translateX(-20%);
        }

        .container1.right-panel-active .overlay-left {
            transform: translateX(0);
        }

        .container1 .overlay-right {
            right: 0;
            transform: translateX(0);
        }

        .container1.right-panel-active .overlay-right {
            transform: translateX(20%);
        }

        .container1 .forgot {
            margin-top: 10px;
        }

        .container1 .forgot:hover {
            text-decoration: underline;
        }
    </style>

    <script>
        // Custom JavaScript for toggling the panels
        const container1 = document.getElementById('container1');
        const signUpButton = document.getElementById('signUp');
        const signInButton = document.getElementById('signIn');

        signUpButton.addEventListener('click', () => {
            container1.classList.add('right-panel-active');
        });

        signInButton.addEventListener('click', () => {
            container1.classList.remove('right-panel-active');
        });
    </script>
{% endblock %}
