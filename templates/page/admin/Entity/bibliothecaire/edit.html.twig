{% extends 'layout_dashboared.html.twig' %}

{% block content %}
<!-- Flash Messages -->
{% for label, messages in app.flashes %}
    <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
        {% for message in messages %}
            <p>{{ message }}</p>
        {% endfor %}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}

<div class="card shadow-lg mt-4 border-0 rounded-3">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bx bx-edit-alt"></i> Modifier Bibliothécaire</h5>
        <a href="{{ path('app_bibliothecaire_index') }}" class="btn btn-outline-light">
            <i class="bx bx-arrow-back"></i> Retour
        </a>
    </div>

    <div class="card-body">
        <!-- Ajouter enctype pour le téléchargement de fichiers -->
        {{ form_start(edit_form, { 'enctype': 'multipart/form-data' }) }}
        <div class="row">
            <!-- Image actuelle -->
            {% if bibliothecaire.image %}
            <div class="col-md-12 mb-3">
                <label class="form-label">Image actuelle</label>
                <div>
                    <img src="{{ asset('uploads/images/' ~ bibliothecaire.image) }}" alt="Image actuelle" class="img-fluid" style="max-width: 200px;">
                </div>
            </div>
            {% endif %}

            <!-- Champ de téléchargement d'image -->
            <div class="col-md-12 mb-3">
                {{ form_label(edit_form.image, 'Nouvelle Image', { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(edit_form.image, { 'attr': { 'class': 'form-control' } }) }}
                {{ form_errors(edit_form.image) }}
            </div>

            <!-- Nom -->
            <div class="col-md-6 mb-3">
                {{ form_label(edit_form.nom, 'Nom', { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(edit_form.nom, { 'attr': { 'class': 'form-control', 'placeholder': 'Entrez le nom' } }) }}
                {{ form_errors(edit_form.nom) }}
            </div>

            <!-- Prénom -->
            <div class="col-md-6 mb-3">
                {{ form_label(edit_form.prenom, 'Prénom', { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(edit_form.prenom, { 'attr': { 'class': 'form-control', 'placeholder': 'Entrez le prénom' } }) }}
                {{ form_errors(edit_form.prenom) }}
            </div>

            <!-- Email -->
            <div class="col-md-6 mb-3">
                {{ form_label(edit_form.email, 'Email', { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(edit_form.email, { 'attr': { 'class': 'form-control', 'placeholder': 'Entrez l\'email' } }) }}
                {{ form_errors(edit_form.email) }}
            </div>

            <!-- Téléphone -->
            <div class="col-md-6 mb-3">
                {{ form_label(edit_form.telephone, 'Téléphone', { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(edit_form.telephone, { 'attr': { 'class': 'form-control', 'placeholder': 'Entrez le téléphone' } }) }}
                {{ form_errors(edit_form.telephone) }}
            </div>

            <!-- Adresse -->
            <div class="col-md-12 mb-3">
                {{ form_label(edit_form.adresse, 'Adresse', { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(edit_form.adresse, { 'attr': { 'class': 'form-control', 'placeholder': 'Entrez l\'adresse' } }) }}
                {{ form_errors(edit_form.adresse) }}
            </div>

            <!-- Date de Naissance -->
            <div class="col-md-6 mb-3">
                {{ form_label(edit_form.dateNaissance, 'Date de Naissance', { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(edit_form.dateNaissance, { 'attr': { 'class': 'form-control' } }) }}
                {{ form_errors(edit_form.dateNaissance) }}
            </div>

            <!-- Spécialisation -->
            <div class="col-md-6 mb-3">
                {{ form_label(edit_form.specialisation, 'Spécialisation', { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(edit_form.specialisation, { 'attr': { 'class': 'form-control', 'placeholder': 'Entrez la spécialisation' } }) }}
                {{ form_errors(edit_form.specialisation) }}
            </div>

            <!-- Compétences -->
            <div class="col-md-12 mb-3">
                {{ form_label(edit_form.competences, 'Compétences', { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(edit_form.competences, { 'attr': { 'class': 'form-control' } }) }}
                {{ form_errors(edit_form.competences) }}
            </div>

            <!-- Bibliothèque -->
            <div class="col-md-12 mb-3">
                {{ form_label(edit_form.bibliotheque, 'Bibliothèque', { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(edit_form.bibliotheque, { 'attr': { 'class': 'form-control' } }) }}
                {{ form_errors(edit_form.bibliotheque) }}
            </div>
        </div>

        <!-- Boutons -->
        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bx bx-save"></i> Enregistrer
            </button>
            <a href="{{ path('app_bibliothecaire_index') }}" class="btn btn-outline-secondary ms-2">
                <i class="bx bx-x"></i> Annuler
            </a>
        </div>
        {{ form_end(edit_form) }}
    </div>
</div>

{% endblock %}
