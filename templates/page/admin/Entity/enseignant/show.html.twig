{% extends 'layout_dashboared.html.twig' %}

{% block title %}Professor Details{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white text-center">
                <h2 class="mb-0" style="color: black ">
                    <i class="bx bx-user-circle me-2"></i> Professor Details
                </h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Profile Picture -->
                    <div class="col-md-4 text-center">
                        {% if  enseignant.image %}
                            <img src="{{ asset('photo_dir/' ~ enseignant.image) }}"
                                 alt="{{ enseignant.nom }}"
                                 class="rounded-circle shadow-sm"
                                 style="width: 200px; height: 200px; object-fit: cover;">
                        {% else %}
                            <div class="d-flex align-items-center justify-content-center bg-light border rounded-circle shadow-sm"
                                 style="width: 200px; height: 200px;">
                                <i class="bx bx-user text-secondary" style="font-size: 100px;"></i>
                            </div>
                        {% endif %}
                        <h4 class="mt-3 text-primary">{{ enseignant.nom }} {{ enseignant.prenom }}</h4>
                    </div>

                    <!-- Professor Details -->
                    <div class="col-md-8">
                        <table class="table table-borderless">
                            <tbody>
                            <tr>
                                <th>ID:</th>
                                <td>{{ enseignant.id }}</td>
                            </tr>
                            <tr>
                                <th>Email:</th>
                                <td>{{ enseignant.email }}</td>
                            </tr>
                            <tr>
                                <th>Téléphone:</th>
                                <td>{{ enseignant.telephone }}</td>
                            </tr>
                            <tr>
                                <th>Date de Naissance:</th>
                                <td>{{ enseignant.birthday ? enseignant.birthday|date('Y-m-d') : 'N/A' }}</td>
                            </tr>
                            <tr>
                                <th>Mot de Passe:</th>
                                <td>*******************</td>
                            </tr>
                            <tr>
                                <th>Matière:</th>
                                <td>{{ enseignant.matiere }}</td>
                            </tr>
                            <tr>
                                <th>Salaire:</th>
                                <td>{{ enseignant.salaire ? enseignant.salaire ~ ' €' : 'N/A' }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center bg-light">
                <a href="{{ path('app_enseignant_index') }}" class="btn btn-primary">
                    <i class="bx bx-arrow-back me-1"></i> Back to List
                </a>
            </div>
        </div>
    </div>
{% endblock %}
