{% extends 'layout_dashboared.html.twig' %}

{% block title %}Student Details{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white text-center">
                <h2 class="mb-0" style="color: black ">
                    <i class="bx bx-user-circle me-2" ></i> Student Details
                </h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Profile Picture -->
                    <div class="col-md-4 text-center">
                        {% if  etudiant.image %}
                            <img src="{{ asset('photo_dir/' ~ etudiant.image) }}"
                                 alt="{{ etudiant.nom }}"
                                 class="rounded-circle shadow-sm"
                                 style="width: 200px; height: 200px; object-fit: cover;">
                        {% else %}
                            <div class="d-flex align-items-center justify-content-center bg-light border rounded-circle shadow-sm"
                                 src="{{ asset('images/user_avatar.png') }}"
                                 style="width: 200px; height: 200px;">
                                <i class="bx bx-user text-secondary" style="font-size: 100px;"></i>
                            </div>
                        {% endif %}
                        <h4 class="mt-3 text-primary">{{ etudiant.nom }} {{ etudiant.prenom }}</h4>
                    </div>

                    <!-- Student Details -->
                    <div class="col-md-8">
                        <table class="table table-borderless">
                            <tbody>
                            <tr>
                                <th>ID:</th>
                                <td>{{ etudiant.id }}</td>
                            </tr>
                            <tr>
                                <th>Email:</th>
                                <td>{{ etudiant.email }}</td>
                            </tr>
                            <tr>
                                <th>Téléphone:</th>
                                <td>{{ etudiant.telephone }}</td>
                            </tr>
                            <tr>
                                <th>Date de Naissance:</th>
                                <td>{{ etudiant.birthday ? etudiant.birthday|date('Y-m-d') : 'N/A' }}</td>
                            </tr>
                            <tr>
                            <tr>
                                <th scope="row">Mot de Passe</th>
                                <td>*******************</td>
                            </tr>
                            <tr>
                                <th>Filiere:</th>
                                <td>{{ etudiant.filiere }}</td>
                            </tr>
                            <tr>
                                <th>Payement Status:</th>
                                <td>
                                    {% if etudiant.payement %}
                                        <span class="badge bg-success">Paid</span>
                                    {% else %}
                                        <span class="badge bg-danger">Unpaid</span>
                                    {% endif %}
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center bg-light">
                <a href="{{ path('app_etudiant_index') }}" class="btn btn-primary">
                    <i class="bx bx-arrow-back me-1"></i> Back to List
                </a>
            </div>
        </div>
    </div>
{% endblock %}
