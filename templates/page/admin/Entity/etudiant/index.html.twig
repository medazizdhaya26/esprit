{% extends 'layout_dashboared.html.twig' %}

{% block content %}
    <div class="card">
        <div class="row justify-content-between align-items-center px-3 pt-3 pb-2">
            <div class="col-6">
                <h5 class="card-header mb-0">All Students</h5>
            </div>
            <div class="col-6 text-end">
                <a href="{{ path('app_etudiant_new') }}" class="btn btn-outline-success">
                    Add Student
                </a>
            </div>
        </div>

        <div class="table-responsive text-nowrap">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Telephone</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                {% for etudiant in etudiants %}
                    <tr>
                        <td>{{ etudiant.id }}</td>
                        <td>{{ etudiant.nom }}</td>
                        <td>{{ etudiant.prenom }}</td>
                        <td>{{ etudiant.telephone }}</td>
                        <td>{{ etudiant.email }}</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('app_etudiant_show', {'id': etudiant.id}) }}">
                                        <i class="bx bx-show-alt me-1"></i> Show
                                    </a>
                                    <a class="dropdown-item" href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}">
                                        <i class="bx bx-edit-alt me-1"></i> Edit
                                    </a>
                                    <form method="post" action="{{ path('app_etudiant_delete', {'id': etudiant.id}) }}" style="display:inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ etudiant.id) }}">
                                        <button class="dropdown-item text-danger" type="submit">
                                            <i class="bx bx-trash me-1"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
