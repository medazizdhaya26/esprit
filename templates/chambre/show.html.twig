{% extends 'layout_dashboared.html.twig' %}

{% block content %}
<div class="card shadow-lg mt-4 border-0 rounded-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Détails de la Chambre</h5>
        <a href="{{ path('app_chambre_index') }}" class="btn btn-outline-secondary">
            <i class="bx bx-arrow-back"></i> Retour à la Liste
        </a>
    </div>
    <div class="card-body">
        <ul class="list-group">
            <li class="list-group-item"><strong>ID :</strong> {{ chambre.id }}</li>
            <li class="list-group-item"><strong>Numéro :</strong> {{ chambre.numeroChambre }}</li>
            <li class="list-group-item"><strong>Type :</strong> {{ chambre.type|capitalize }}</li>
            <li class="list-group-item"><strong>Climatiseur :</strong> {{ chambre.climatiseur ? 'Oui' : 'Non' }}</li>
            <li class="list-group-item"><strong>Chauffage Central :</strong> {{ chambre.chauffageCentral ? 'Oui' : 'Non' }}</li>
            <li class="list-group-item"><strong>Disponibilité :</strong> 
                {% if chambre.estDisponible %}
                    <span class="badge bg-success">Disponible</span>
                {% else %}
                    <span class="badge bg-danger">Occupée</span>
                {% endif %}
            </li>
            <li class="list-group-item"><strong>Foyer Associé :</strong> {{ chambre.foyer.nomFoyer }}</li>
            <li class="list-group-item"><strong>Prix par Trimestre :</strong> {{ chambre.calculerPrixTrimestre() }} DT</li>
        </ul>
    </div>
</div>
{% endblock %}
